{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.39.26.7824",
      "templateHash": "10081479088435593397"
    }
  },
  "parameters": {
    "labSubscriptionId": {
      "type": "string",
      "metadata": {
        "description": "Azure subscription ID for lab deployments (prevents wrong-subscription mistakes)"
      }
    },
    "domain": {
      "type": "string",
      "defaultValue": "compute",
      "allowedValues": [
        "identity",
        "networking",
        "storage",
        "compute",
        "monitoring"
      ],
      "metadata": {
        "description": "AZ-104 exam domain"
      }
    },
    "topic": {
      "type": "string",
      "defaultValue": "app-service-tiers",
      "metadata": {
        "description": "Lab topic in kebab-case"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "eastus",
      "metadata": {
        "description": "Azure region for resources"
      }
    },
    "owner": {
      "type": "string",
      "defaultValue": "Greg Tate",
      "metadata": {
        "description": "Lab owner for tagging"
      }
    },
    "appServicePlanName": {
      "type": "string",
      "defaultValue": "MyPlan",
      "metadata": {
        "description": "Name of the App Service Plan"
      }
    },
    "appName": {
      "type": "string",
      "defaultValue": "MyApp",
      "metadata": {
        "description": "Name of the Web App"
      }
    },
    "skuName": {
      "type": "string",
      "defaultValue": "F1",
      "allowedValues": [
        "F1",
        "D1",
        "B1",
        "B2",
        "B3",
        "S1",
        "S2",
        "S3"
      ],
      "metadata": {
        "description": "SKU for App Service Plan: F1 (Free), D1 (Shared), B1 (Basic)"
      }
    }
  },
  "variables": {
    "resourceGroupName": "[format('az104-{0}-{1}-bicep', parameters('domain'), parameters('topic'))]",
    "uniqueAppName": "[format('{0}-{1}', toLower(parameters('appName')), uniqueString(resourceGroup().id))]",
    "commonTags": {
      "Environment": "Lab",
      "Project": "AZ-104",
      "Domain": "[format('{0}{1}', toUpper(substring(parameters('domain'), 0, 1)), substring(parameters('domain'), 1))]",
      "Purpose": "App Service Pricing Tiers",
      "Owner": "[parameters('owner')]",
      "DeploymentMethod": "Bicep"
    },
    "tierMapping": {
      "F1": "Free",
      "D1": "Shared",
      "B1": "Basic",
      "B2": "Basic",
      "B3": "Basic",
      "S1": "Standard",
      "S2": "Standard",
      "S3": "Standard"
    },
    "alwaysOnAllowed": "[and(not(equals(parameters('skuName'), 'F1')), not(equals(parameters('skuName'), 'D1')))]"
  },
  "resources": [
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2023-01-01",
      "name": "[parameters('appServicePlanName')]",
      "location": "[parameters('location')]",
      "tags": "[variables('commonTags')]",
      "sku": {
        "name": "[parameters('skuName')]",
        "tier": "[variables('tierMapping')[parameters('skuName')]]"
      },
      "kind": "windows",
      "properties": {}
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2023-01-01",
      "name": "[variables('uniqueAppName')]",
      "location": "[parameters('location')]",
      "tags": "[variables('commonTags')]",
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]",
        "httpsOnly": false,
        "siteConfig": {
          "alwaysOn": "[variables('alwaysOnAllowed')]",
          "ftpsState": "Disabled",
          "minTlsVersion": "1.2",
          "appSettings": [
            {
              "name": "WEBSITE_RUN_FROM_PACKAGE",
              "value": "0"
            }
          ]
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]"
      ]
    }
  ],
  "outputs": {
    "resourceGroupName": {
      "type": "string",
      "value": "[variables('resourceGroupName')]"
    },
    "appServicePlanName": {
      "type": "string",
      "value": "[parameters('appServicePlanName')]"
    },
    "appServicePlanSku": {
      "type": "string",
      "value": "[parameters('skuName')]"
    },
    "appName": {
      "type": "string",
      "value": "[variables('uniqueAppName')]"
    },
    "appUrl": {
      "type": "string",
      "value": "[format('https://{0}', reference(resourceId('Microsoft.Web/sites', variables('uniqueAppName')), '2023-01-01').defaultHostName)]"
    },
    "tierInfo": {
      "type": "object",
      "value": {
        "sku": "[parameters('skuName')]",
        "dailyLimit": "[if(equals(parameters('skuName'), 'F1'), '60 CPU minutes', if(equals(parameters('skuName'), 'D1'), '240 CPU minutes', 'Unlimited'))]",
        "computeType": "[if(or(equals(parameters('skuName'), 'F1'), equals(parameters('skuName'), 'D1')), 'Shared', 'Dedicated')]"
      }
    },
    "portalUrl": {
      "type": "string",
      "value": "[format('https://portal.azure.com/#@/resource{0}/scaleUp', resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName')))]"
    }
  }
}